@model AddProductViewModel
@{
    ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>

<form asp-action="AddProduct">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription" class="control-label">Product Description</label>
        <input asp-for="ProductDescription" class="form-control" />
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductCategory" class="control-label">Product Category</label>
        <input asp-for="ProductCategory" class="form-control" />
        <span asp-validation-for="ProductCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductStockKeepingUnit" class="control-label">Product SKU</label>
        <input asp-for="ProductStockKeepingUnit" class="form-control" />
        <span asp-validation-for="ProductStockKeepingUnit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice" class="control-label">Product Price</label>
        <input asp-for="ProductPrice" class="form-control" />
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductQuantity" class="control-label">Product Quantity</label>
        <input asp-for="ProductQuantity" class="form-control" />
        <span asp-validation-for="ProductQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplierInformation" class="control-label">Supplier Information</label>
        <input asp-for="SupplierInformation" class="form-control" />
        <span asp-validation-for="SupplierInformation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreationDate" class="control-label">Creation Date</label>
        <input asp-for="CreationDate" class="form-control" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>
    </div>
    <button style="margin-top: 20px;" type="submit" class="btn btn-primary">Add Product</button>
</form>