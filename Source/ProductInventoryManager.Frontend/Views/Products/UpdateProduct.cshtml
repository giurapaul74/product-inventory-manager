@model ProductUpdateViewModel
@{
    ViewData["Title"] = "Update Product";
}

<h1>Update Product</h1>

<form asp-action="UpdateProduct" asp-controller="Products" asp-route-id="@Model.ProductId" method="post">
    <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription"></label>
        <input asp-for="ProductDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductCategory"></label>
        <input asp-for="ProductCategory" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductStockKeepingUnit"></label>
        <input asp-for="ProductStockKeepingUnit" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductQuantity"></label>
        <input asp-for="ProductQuantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SupplierInformation"></label>
        <input asp-for="SupplierInformation" class="form-control" />
    </div>
    <button style="margin-top: 20px;" type="submit" class="btn btn-primary">Update Product</button>
</form>

